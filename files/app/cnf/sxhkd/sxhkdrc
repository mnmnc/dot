#
# Refresh & Quit
#
super + shift + space
  pkill -USR1 sxhkd && notify-send -u low 'ï„œ reload'

super + shift + Escape
  bspc quit && kill $(pgrep stp)

super + alt + Escape
  slock

#
# Dmenu
#
super + Return
  xst

super + space
  dm-ex

super + period
  dm-fm

super + shift + period
  dm-mp

#
# window management
#

# alternate between the tiled and monocle layout
super + m
  bspc desktop -l next

super + Escape
  bspc node -c
#  killw $(pfw)

# focus window left|right|top|bottom
super + {a,d,w,s}
  bspc node -f {west,east,north,south}

# ,z,x
super + {q,e}
  bspc node -f {prev,next}

# y,
super + shift + {x,d,f}
  bspc node -t {pseudo_tiled,floating,fullscreen}

# move windows around
super + {Left,Down,Up,Right}
  bspc node -v {-20 0,0 20,0 -20,20 0}
#  xdo move {-x -20,-x +20,-y -20,-y +20}
#  wmv {-20 0, 0 20, 0 -20, 20 0} $(pfw)

# resize windows
super + alt + {Left,Down,Up,Right}
  bspc node -z {left -20 0, bottom 0 20, top 0 -20, right 20 0}
#  wrs {-20 0, 0 20, 0 -20, 20, 0} $(pfw)

super + alt + shift + {Left,Down,Up,Right}
  bspc node -z {right -20 0, top 0 20, bottom 0 -20, left 20 0}

super + m
  bspc desktop -l next

super + {1-9,0}
  bspc desktop -f '^{1-9,10}'

super + shift + {1-9,0}
  bspc node -d '^{1-9,10}'

#
# other
#

super + shift + c
  clk

super + shift + w
  wtr

## Audio Volume Keys
XF86AudioRaiseVolume
  vol 5%+

XF86AudioLowerVolume
  vol 5%-

XF86AudioMute
  vol toggle

## Audio Playback Keys
{XF86AudioPrev, XF86AudioNext, XF86AudioPlay}
  playerctl {previous,next,play-pause}

## Brightness Keys
XF86MonBrightnessUp
  xbacklight -inc 10

XF86MonBrightnessDown
	xbacklight -dec 10

super + Print
  xsh 'desktop'

super + ctrl + Print
  xsh 'window'

# Start screen recording
super + alt + Print
  xsr

# Stop screen recording
super + alt + Pause
  pkill -f 'x11grab'
