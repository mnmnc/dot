# Read more about it on
# https://github.com/baskerville/sxhkd/blob/master/parse.c#L384

# reload sxhkd
super + shift + space
  pkill -USR1 sxhkd && notify-send -u low 'ï„œ reload'

# sleep, lock, logoff, shutdown, reboot
super + shift + {h,k,l,n,o,Escape}
  powr {h,k,l,n,o,a}

# terminal
super + Return
  xst

# program launcher
super + space
  dm-ex

# kill window
super + Escape
  desw $(pfw)

# focus window left/right/up/down
super + {a,d,w,s}
  focw pos {l,r,u,d}

# focus window previous/next/first/last
super + {q,e}
  focw his {p,n}

# move window left/right/up/down
super + {Left,Right,Up,Down}
  wmv {-20 0,20 0,0 -20,0 20} $(pfw)

# resize window 
super + ctrl + {Left,Right,Up,Down}
  wrs {-20 0,20 0,0 -20,0 20} $(pfw)

# snap window
super + shift + {w,s,a,d,q,e,z,x,c,v,f}
  snaw {t,b,l,r,tl,tr,bl,br,c,m,x} $(pfw)

# backup/restore window
super + shift + {b,r}
  rstw {b,r} $(pfw)

# modify window hide/maximize/default/fullscreen
#super + shift + {y,x,d,f}
  #modw {h,a,d,f} $(pfw)

# modify window show last hidden
#super + ctrl + shift + y
  #modw s $(phw -l) # print last hidden window

# group window <group> add/delete/toggle/destroy
super + ctrl + {1-9,0}
  grpw {1-9,0} tog $(pfw)
super + {1-9,0}
  grpw {1-9,0} tog

#super + {1-9,0} + Delete
#  grpw {1-9,0} des

super + shift + {1-9,0}
  grpw {1-9,0} cur

# modify window stacking order lower/higher/bottom/top
super + alt + {Up,Down}
  chwso {-r,-l} $(pfw)

# file manager
#super + period
#  dm-fm

# music player
#super + ctrl + period
#  dm-mp

# clock notify
super + alt + c
  notify-send -u low "$(clk)"

# weather notify
super + alt + w
  notify-send -u low "$(wtr)"

# screenshot desktop
super + Print
  xsh 'desktop'

# screenshot window
super + ctrl + Print
  xsh 'window'

# start screen recording
super + alt + Print
  xsr

# stop screen recording
super + alt + Pause
  pkill -f 'x11grab'

# raise volume
XF86AudioRaiseVolume
  vol 5%+

# lower volume
XF86AudioLowerVolume
  vol 5%-

# toggle mute
XF86AudioMute
  vol toggle

# raise brightness
XF86MonBrightnessUp
  xbacklight -inc 10

# lower brightness
XF86MonBrightnessDown
  xbacklight -dec 10
